@page
@model BikeStore.Pages.StoreModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-3 justify-content-left">
            <div class="border border-aqua rounded p-4">
                <h4>Filter:</h4>
                <form>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="mountainBike" name="mountainBike" value="true">
                        <label class="form-check-label" for="mountainBike">
                            Mountain Bike
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="electricBike" name="electricBike" value="true">
                        <label class="form-check-label" for="electricBike">
                            Electric Bike
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="touringBike" name="touringBike" value="true">
                        <label class="form-check-label" for="touringBike">
                            Touring Bike
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="cityBike" name="cityBike" value="true">
                        <label class="form-check-label" for="cityBike">
                            City Bike
                        </label>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-9">
            <div class="input-group">
                <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                <button type="button" class="btn btn-outline-dark">search</button>
            </div>
            <div class="album py-5 bg-light">
                <div class="container">
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                        @foreach(var bike in IndexModel.inventory.GetBikes())
                         {
                            <div class="col">
                                <div class="card shadow-sm">
                                    <svg class="bd-placeholder-img card-img-top" width="100%" height="50">
                                        <img src="~/Images/@bike.GetImageData()" alt="@bike.GetBrand()" />
                                    </svg>
                                    <div class="card-body-sm">
                                        <p class="card-text">@bike.GetBrand()</p>
                                        <p class="card-text">@bike.GetPrice() &euro;</p>
                                        <div class="d-flex justify-content-between align-items-center m-1">
                                            <div class="btn-group m-1">
                                                <a asp-area="" asp-page="BikePage" asp-route-id="@bike.GetId()" class="btn btn-sm btn-outline-secondary">View More</a>
                                                <a asp-page="BikePage" asp-route-id="@bike.GetId()" class="btn btn-sm btn-outline-secondary">Add to cart</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                         }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
