@page
@model BikeWebShop.Pages.StoreModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-3 justify-content-left">
            <div class="border border-aqua rounded p-4">
                <h4>Filter:</h4>
                <form method="post" id="filter-form">
                    @foreach (var type in Model.inventory.GetBikesType())
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Types" id="@System.Convert.ToInt32(type)" value="@System.Convert.ToInt32(type)" onchange="submitForm()">
                            <label class="form-check-label" for="@System.Convert.ToInt32(type)">
                                @type.ToString()
                            </label>
                        </div>
                    }
                </form>
            </div>
        </div>
        <div class="col-9">
            <form method="get">
                <div class="input-group">
                    <input class="form-control rounded" asp-for="SearchedTerm" placeholder="Search" />
                    <button type="submit" class="btn btn-outline-dark">search</button>
                </div>
            </form>
            <div class="album py-5 bg-light">
                <div class="container">
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                        @foreach (var bike in Model.Catalog)
                        {
                            <div class="col">
                                <div class="card shadow-sm">
                                    <svg class="bd-placeholder-img card-img-top" width="100%" height="50">
                                        <img src="data:image;base64,@Convert.ToBase64String(bike.GetImageData())" alt="@bike.GetBrand()" />
                                    </svg>
                                    <div class="card-body-sm">
                                        <p class="card-text">@bike.GetBrand()</p>
                                        <p class="card-text">@bike.GetPrice() &euro;</p>
                                        <div class="d-flex justify-content-between align-items-center m-1">
                                            <div class="btn-group m-1">
                                                <a asp-area="" asp-page="BikePage" asp-route-id="@bike.GetId()" class="btn btn-sm btn-outline-secondary">View More</a>
                                                <a asp-page="BikePage" asp-route-id="@bike.GetId()" class="btn btn-sm btn-outline-secondary">Add to cart</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function submitForm() {
        document.getElementById("filter-form").submit();
    }
</script>