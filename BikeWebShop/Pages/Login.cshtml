@page
@model BikeWebShop.Pages.LoginModel
@{
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-white text-dark" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-start">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your login and password!</p>
                            <form method="post">
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="login.Email" class="form-control form-control-lg" />
                                    <span asp-validation-for="login.Password"></span>
                                    <label class="form-label" asp-for="login.Email" >Email</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="login.Password" class="form-control form-control-lg" />
                                    <span asp-validation-for="login.Password"></span>
                                    <label class="form-label" asp-for="login.Password">Password</label>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                            class="btn btn-dark btn-block btn-lg gradient-custom-4 text-body text-white-50">
                                        Login
                                    </button>
                                </div>
                            </form>
                        </div>
                        

                        <div>
                            <p class="mb-0 text-center">
                                Don't have an account? <a asp-page="/Registration" class="text-dark fw-bold">Sign Up</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}