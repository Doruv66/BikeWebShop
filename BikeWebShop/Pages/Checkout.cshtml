@page
@model BikeWebShop.Pages.CheckoutModel
@{
}
<div class="d-flex justify-content-center">
<form method="post">
    <div class="col-md-9 mb-4" align-items-center">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0 text-font text-uppercase">Delivery address</h5>
            </div>
            <div class="card-body">
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <input asp-for="orderInfo.Name" class="form-control" />
                                 <span asp-validation-for="orderInfo.Name"></span>
                                <label class="form-label" asp-for="orderInfo.Name">First name</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                    <input asp-for="orderInfo.LastName" class="form-control" />
                                    <span asp-validation-for="orderInfo.LastName"></span>
                                    <label class="form-label" asp-for="orderInfo.LastName">Last name</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-outline mb-4">
                            <input asp-for="orderInfo.Address" class="form-control" />
                            <span asp-validation-for="orderInfo.Address"></span>
                            <label class="form-label" asp-for="orderInfo.Address">Addrress</label>
                    </div>
                
                    <div class="form-outline mb-4">
                            <input asp-for="orderInfo.PostalCode" class="form-control" />
                            <span asp-validation-for="orderInfo.PostalCode"></span>
                            <label class="form-label" asp-for="orderInfo.PostalCode">Postal code</label>
                    </div>

            
            </div>
        </div>
        <div class="card shadow-2-strong mb-5 mb-lg-0" style="border-radius: 16px;">
            <div class="card-body p-4">

                <div class="row">
                    <div class="col-md-6 col-lg-4 col-xl-6">
                        <div class="row">
                            <div class="col-12 col-xl-6">
                                <div class="form-outline mb-4 mb-xl-5">
                                    <input type="text" id="typeName" class="form-control form-control-lg" siez="17"
                                           placeholder="John Smith" />
                                    <label class="form-label" for="typeName">Name on card</label>
                                </div>

                                <div class="form-outline mb-4 mb-xl-5">
                                    <input type="text" id="typeExp" class="form-control form-control-lg" placeholder="MM/YY"
                                           size="7" id="exp" minlength="7" maxlength="7" />
                                    <label class="form-label" for="typeExp">Expiration</label>
                                </div>
                            </div>
                            <div class="col-12 col-xl-6">
                                <div class="form-outline mb-4 mb-xl-5">
                                    <input type="text" id="typeText" class="form-control form-control-lg" siez="17"
                                           placeholder="1111 2222 3333 4444" minlength="19" maxlength="19" />
                                    <label class="form-label" for="typeText">Card Number</label>
                                </div>

                                <div class="form-outline mb-4 mb-xl-5">
                                    <input type="password" id="typeText" class="form-control form-control-lg"
                                           placeholder="&#9679;&#9679;&#9679;" size="1" minlength="3" maxlength="3" />
                                    <label class="form-label" for="typeText">Cvv</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-xl-3">
                        <div class="d-flex justify-content-between mb-4" style="font-weight: 500;">
                            <p class="mb-2">Total</p>
                            <p class="mb-2">@Model.Total.ToString("C")</p>
                        </div>

                        <button type="submit" class="btn btn-dark btn-block btn-lg" >
                            <div class="d-flex justify-content-between text-white-50">
                                <span>Checkout</span>
                            </div>
                        </button>

                    </div>
            
                </div>
            </div>
        </div>
    </div>
</form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
