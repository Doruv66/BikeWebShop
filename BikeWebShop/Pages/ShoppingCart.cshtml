@page 
@using BikeLibrary.BLL.Cupons;
@model BikeWebShop.Pages.ShoppingCartModel
@{
}

<section class="h-100" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
        </div>
                @if(Model.cart != null)
                {
                    @foreach (var item in Model.cart.Getitems())
                    {
                        <div class="card rounded-3 mb-4">
                            <div class="card-body p-4">
                                <div class="row d-flex justify-content-between align-items-center">
                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                        <img src="data:image;base64,@Convert.ToBase64String(Model.inventory.GetBike(item.bikeid).GetImageData())" class="img-fluid rounded-3" alt="@Model.inventory.GetBike(item.bikeid).GetBrand()" />
                                    </div>
                                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                           <p>Quantity:</p>
                                           <p>@item.quantity</p>
                                    </div>
                                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                            <h5 class="mb-0">@(Model.inventory.GetBike(item.bikeid).GetPrice() * @item.quantity) &euro;</h5>
                                    </div>
                                    <div class="col-md-3 col-lg-2 col-xl-2 text-center">
                                        <button class="btn btn-outline-dark flex-shrink-0 bg-dark text-black" type="button">
                                            <a asp-page="ShoppingCart" asp-page-handler="delete" asp-route-id="@item.bikeid" class="btn btn-dark">Remove</a>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <h1>No Items in cart Yet</h1>
                }
                <h1>Cupons Available</h1>
                @if (Model.cart != null && Model.cart.HasCupon(new FirstOrderCupon(20)) && Model.cart.Getitems().Count > 0)
                {
                    <div class="container my-5">
                        <div class="row d-flex justify-content-center align-items-center">
                            <div class="col-sm-6">
                                <div class="coupon bg-white rounded mb-3 d-flex justify-content-between">
                                    <div class="tengah py-3 d-flex w-100 justify-content-center">
                                        <div>
                                            <span class="badge badge-success">Valid</span>
                                            <h3 class="lead">First Order Cupon</h3>
                                            <p class="text-muted mb-0">You will get a 20 &euro; discount</p>
                                        </div>
                                    </div>
                                    <div class="kanan">
                                        <div class="info m-3 d-flex align-items-center">
                                            <div class="w-100">
                                                <a asp-page="/ShoppingCart" asp-page-handler="firstorder" class="btn btn-sm btn-outline-danger btn-block">
                                                    Apply
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if (Model.cart != null && Model.cart.HasCupon(new Over1000Cupon(20)) && Model.cart.GetTotalPrice(Model.inventory) > 1000)
                {
                    <div class="container my-5">
                        <div class="row d-flex justify-content-center align-items-center">
                            <div class="col-sm-6">
                                <div class="coupon bg-white rounded mb-3 d-flex justify-content-between">
                                    <div class="tengah py-3 d-flex w-100 justify-content-center">
                                        <div>
                                            <span class="badge badge-success">Valid</span>
                                            <h3 class="lead">Over 1000 &euro; Cupon  </h3>
                                            <p class="text-muted mb-0">You will get a 10% discount</p>
                                        </div>
                                    </div>
                                    <div class="kanan">
                                        <div class="info m-3 d-flex align-items-center">
                                            <div class="w-100">
                                                <a asp-page="/ShoppingCart" asp-page-handler="over1000" class="btn btn-sm btn-outline-danger btn-block">
                                                    Apply
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if(Model.cart != null && Model.cart.Getitems().Count > 0)
                {
                    <div class="card">
                        <div class="card-body text-black">
                            <button type="button" class="btn btn-dark btn-block btn-lg">
                                <a class="text-decoration-none text-white" asp-area="" asp-page="/Checkout">Proceed to Pay</a>
                            </button>
                            <h4>Total Price: @Model.cart.GetTotalPrice(Model.inventory).ToString("C") </h4>
                        </div>
                    </div>
                }

      </div>
    </div>
  </div>
</section>
