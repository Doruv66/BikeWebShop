<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BikeStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BikeStore.styles.css" asp-append-version="true" />
</head>
<body>

    <nav class="navbar navbar-expand navbar-dark bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="Images/bikeuniverslogo.png" style="height: 50px; width: 50px;" />
            </a>
            <div class="collapse navbar-collapse " id="navbar">
                <ul class="navbar-nav me-auto navbar-nav ">
                    <li class="nav-item">
                        <a class="nav-link active text-dark" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Store">Store</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="#">Account</a>
                    </li>
                </ul>
            </div>
            <button class="btn-sm">
                <a asp-area="" asp-page="/ShoppingCart"><img src="Images/shoppingCart.png" style="height: 20px; width: 20px;" /></a>
            </button>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container">
        <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Address</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Phone Number</a></li>
            </ul>
            <p class="text-center text-muted">Bike Universe</p>
        </footer>
    </div>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>